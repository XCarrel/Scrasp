@model Scrasp.Models.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
}
@section styles {
    <style>
        .clickable-row {
            cursor: pointer;
        }
    </style>
}
@section scripts {
    <script type="text/javascript">
        $(document).ready(function ($) {
            $(".clickable-row").click(function () {
                window.location = $(this).data("href");
            });
        });
    </script>
}

<h1>Dashboard</h1>

<h2>Mes projets</h2>
@Html.Partial("~/Views/Projects/Index.cshtml", Model.projects)


@if (Model.jobs.Count > 0)
{
    <h2>Mes taches</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.jobs[0].jobDescription)</th>
                <th>Projet</th>
                <th>@Html.DisplayNameFor(model => model.jobs[0].JobState.stateName)</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Scrasp.Models.Job job in Model.jobs)
            {
                <tr class='clickable-row' data-href='@Url.Action("Details", "Jobs", new {id=job.id})'>
                    <td>@Html.DisplayFor(modelItem => job.jobDescription)</td>
                    <td>@Html.DisplayFor(modelItem => job.Story.Project.title)</td>
                    <td>@Html.DisplayFor(modelItem => job.JobState.stateName)</td>
                    <td>
                        @if (job.JobState.allowClosure == 1)
                        {
                            <a class="btn btn-primary" href="@Url.Action("Close", "Dashboard", new {jobId=job.id})"><span>Fermer</span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
