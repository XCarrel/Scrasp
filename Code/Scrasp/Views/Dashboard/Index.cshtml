<h3>Mes tâches</h3>
<div class="col-md-6">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Jobs.First().jobDescription)</th>
                <th>Etat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model.Jobs)
            {
                <tr>
                    <td>@job.jobDescription</td>
                    <td>
                        @job.JobState.stateName
                        @if (job.JobStates_id == 3)
                        {
                            <button class="closeJob" data-jobid="@job.id">Fermer</button>
                        }
                    </td>
                </tr>
            }
            <tr></tr>
        </tbody>
    </table>
</div>

